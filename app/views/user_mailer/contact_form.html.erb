<!-- Header of email -->
 <table border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
   <td>
    <!-- Header of the email (contaiing an image and later a title) -->
    <table align="center" border="0" cellpadding="0" cellspacing="0"
      width="800" style="border-collapse: collapse;">
      <tr>
        <td align="left" style="color: #971249; font-family: Arial, sans-serif;
         font-size: 16px; padding-left:5px; padding-right: 25px; padding-bottom: 20px; padding-top: 10px">
          <b>Nouveau message d'un usager du site : Guylaine Lefebvre Massothérapeute</b>
        </td>
      </tr>

      <tr>
        <td align="center" bgcolor="#d6aa79" style="padding: 40px 0 30px 0;">
          <%= image_tag("Mon_Local_V2.jpg", size: "500x375",
            alt: "Edit Entry", class: "img-two img-responsive", style: "display: block;")%>
        </td>
      </tr>
    </table>
    </td>
  </tr>
  <!-- Email body (3 sections - Title, main comments,
        bottom (divided in two sections separated by some spacing) -->
  <tr>
    <td>
      <table align="center" border="0" cellpadding="0" cellspacing="0"
      width="800" height= "200" style="border-collapse: collapse;">

        <tr>
          <td align="left" style="color: #971249; font-family: Arial, sans-serif; font-size: 24px;
           padding: 10px 0 10px">
            <b>Nom : </b>
          </td>
        </tr>

        <tr>
          <td style="color: #153643; padding: 10px 0 20px 0;">
            <%= @name %>
          </td>
        </tr>

        <tr>
          <td style="color: #971249; font-family: Arial, sans-serif; font-size: 24px;
          padding: 10px 0 10px">
            <b>Message : </b>
          </td>
        </tr>

        <tr>
          <td style="color: #153643; padding: 10px 0 20px 0;">
            <%= @message %>
          </td>
        </tr>

        <tr>
          <td style="color: #971249; font-family: Arial, sans-serif; font-size: 24px;
          padding: 10px 0 10px">
           <b>Téléphone : </b>
          </td>
        </tr>

        <tr>
          <td style="color: #153643; padding: 10px 0 20px;">
             <%= @phone %>
          </td>
        </tr>

        <tr>
        <td style="color: #971249; font-family: Arial, sans-serif; font-size: 24px;
        padding: 10px 0 10px">
         <b>Courriel : </b>
        </td>
        </tr>

        <tr>
          <td style="color: #153643; padding: 10px 0 20px;">
             <%= @email %>
          </td>
        </tr>
      </table>
    </td>
  </tr>

<!-- Email footer section -->
  <tr>
    <td style="padding: 10px 10px 10px 20px">
      <table align="center" bgcolor="#971249" border="0" cellpadding="0" cellspacing="0"
          width="800" style="padding: 30px 30px 30px 30px; border-collapse: collapse;">

        <tr>
          <td align="left" style="color: #ffffff; font-family: Arial, sans-serif;
            font-size: 14px; width=75%; padding: 10px;">
          &copy; 2018 Guylaine Lefebvre Massothérapeute
          </td>

          <td align="right" style="font-size: 0; line-height: 0;" width="20">&nbsp;>
            <a href="https://www.facebook.com/Guylaine-Lefebvre-massothérapeute-1445595255704434"
            target="_blank">
              <%= image_tag("Facebook.png", alt: "Facebook",
                style: "width:25px; height:25px; color:white;")%>
            </a>
          </td>

          <td style="font-size: 0; line-height: 0;" width="10">
            &nbsp;&nbsp;
          </td>

          <td>
            <a href="http://linkedin.com/in/guylaine-lefebvre-74b22721"
            target="_blank">
              <%= image_tag("LinkedIn.png", alt: "Linnked",
                style: "width:25px; height:25px; color:white;")%>
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
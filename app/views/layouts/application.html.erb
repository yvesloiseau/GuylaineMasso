          <li><%= link_to "Promotions",  guylaine_masso_promotion_path %> </li>

        </ul>

        </div>

    </div>
  </nav>


  <!-- Flash to display a notice to users or any alerts -->
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <div id="alert-area">
      <p class="alert alert-danger"><%= alert %></p>
    </div>
  <% end %>

  <!-- Display all partial pages -->
  <%= yield %>


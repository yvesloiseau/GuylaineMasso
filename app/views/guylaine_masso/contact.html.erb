<!-- **********************************************************************  -->
<div class="container-fluid contactc anchor-contact" id="contactus">
  <div class="row" id="work">
    <div class="col-xs-12 col-sm-6 col-md-6">

      <div class="contact-header">
        <!-- <h1>Contact Page</h1> -->
        <h2 class="h2-apropos"><%=t('copyright')%></h2>
      </div>
    </div>
  </div>

  <div class="row" id="work">
    <div class="col-xs-12 col-sm-5 col-md-5">

      <div class="more-info">
        <h3><%=t('.laval_ouest')%></h3>
        <div class="contact-page-indent">
          <h4></h4>
        </div>
      </div>
      <br>

      <div class="contact-email">
        <h3><%=t('.rendez_vous')%>
          <span class="email-bold rwd-line">
          <strong>514 973-6962</strong>
          </span>
        </h3>
      </div>

      <br>
      <div class="contact-email">
        <h3><span class="email-bold rwd-line">
        <strong><%=t('.ecrivez')%></strong></span></h3>
      </div>

      <div class="more-info">
        <h3><%=t('.contact_reseau')%></h3>
        <div class="contact-page-indent">
          <h4></h4>
        </div>
      </div>

    </div>

    <div class="col-xs-12 col-sm-3 col-md-3">
      <div class="image-about">
        <div class="image-two">
          <%= image_tag("Photo_Guylaine_V2.jpg", size: "300x454",
          alt: "Edit Entry", class: "img-two img-responsive")%>
       </div>
      </div>
</div>

    <!-- Form to caputre users feedback and to get their contact information -->
    <div class="col-xs-12 col-sm-4 col-md-4">
      <h1><%=t('.laissez_message') %></h1>
      <%= flash[:notice] %>

      <%= form_tag("/guylaine_masso/thank_you") do %>
      <div class="field-group-contactUs-form">
        <%= label_tag :nom, t('nom_tag') %>
        <%= text_field_tag(:name, nil, class: "name-ContactUs-Form",
        placeholder: t('nom_placeholder'), style: 'width:70%;') %>
      </div>
      <div class="field-group-contactUs-form">
        <%= label_tag :courriel, t('email_tag')  %>
        <%= email_field_tag :email, nil, class: "name_ContactUs_Form",
        placeholder: t('email_placeholder'), style: 'width:55%;' %>
      </div>
      <div class="field-group-contactUs-form">
        <%= label_tag :téléphone, t('phone_tag')  %>
        <%= telephone_field_tag :phone, nil, class: "name_ContactUs_Form",
        placeholder: t('phone_placeholder'), style: 'width:37%;' %>
      </div>

      <div class="field-group-contactUs-form">
        <%= label_tag :message, t('message_tag')  %>
        <%= text_area_tag :message, nil,
        class: "message_ContactUs_Form", placeholder: t('message_placeholder'),
          style: 'width:90%;', rows: 20 %>
      </div>

      <%= submit_tag t('submit_placeholder'), class: "contact-submit btn btn-primary btn-sm" %>
      <% end %>
    </div>

  </div>
</div>

